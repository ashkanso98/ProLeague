@model ProLeague.Application.ViewModels.News.NewsIndexViewModel

@{
    ViewData["Title"] = "اخبار";
}

@functions {
    public static string Truncate(string text, int length)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= length) return text;
        return text.Substring(0, length) + "...";
    }
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">آرشیو اخبار</h1>
        <p class="lead text-muted">جدیدترین اخبار و رویدادهای دنیای فوتبال را اینجا بخوانید.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label for="leagueId" class="form-label">فیلتر بر اساس لیگ</label>
                        <select name="leagueId" asp-for="CurrentLeagueId" asp-items="Model.Leagues" class="form-select">
                            <option value="">همه لیگ‌ها</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label for="teamId" class="form-label">فیلتر بر اساس تیم</label>
                        <select name="teamId" asp-for="CurrentTeamId" asp-items="Model.Teams" class="form-select">
                            <option value="">همه تیم‌ها</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">فیلتر</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var news in Model.NewsList)
        {
            <div class="col">
                <div class="card h-100 shadow-sm news-card">
                    <div class="row g-0">
                        <div class="col-md-5">
                            <img src="@(news.MainImagePath ?? "/images/default-news.png")" class="img-fluid rounded-start h-100" alt="@news.Title" style="object-fit: cover;">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body d-flex flex-column h-100">
                                <h5 class="card-title">@news.Title</h5>
                                <p class="card-text text-muted small">@Truncate(news.Content, 100)</p>
                                <div class="mt-auto">
                                    <small class="text-muted">@news.PublishedDate.ToShortDateString()</small>
                                    <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="stretched-link float-end">ادامه مطلب</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @{
        var prevDisabled = !Model.NewsList.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.NewsList.HasNextPage ? "disabled" : "";
    }
    <nav aria-label="Page navigation" class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item @prevDisabled">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(Model.NewsList.PageIndex - 1)"
                   asp-route-leagueId="@Model.CurrentLeagueId"
                   asp-route-teamId="@Model.CurrentTeamId">
                    قبلی
                </a>
            </li>
            <li class="page-item active" aria-current="page">
                <span class="page-link">@Model.NewsList.PageIndex</span>
            </li>
            <li class="page-item @nextDisabled">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(Model.NewsList.PageIndex + 1)"
                   asp-route-leagueId="@Model.CurrentLeagueId"
                   asp-route-teamId="@Model.CurrentTeamId">
                    بعدی
                </a>
            </li>
        </ul>
    </nav>

</div>