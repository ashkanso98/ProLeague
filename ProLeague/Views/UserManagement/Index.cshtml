@model List<ProLeague.Application.ViewModels.User.UserRolesViewModel>

@{
    ViewData["Title"] = "مدیریت کاربران";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="card-title mb-0">لیست کاربران سیستم</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>نام نمایشی</th>
                        <th>نام کاربری (ایمیل)</th>
                        <th>نقش‌ها (Roles)</th>
                        <th class="text-center">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-bold">@user.DisplayName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    @foreach (var role in user.Roles)
                                    {
                                        var badgeClass = role switch
                                        {
                                            "Admin" => "bg-danger",
                                            "Editor" => "bg-warning text-dark",
                                            "User" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                        <span class="badge @badgeClass me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">بدون نقش</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="ManageRoles" asp-route-userId="@user.UserId" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-user-edit me-1"></i> مدیریت نقش‌ها
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>