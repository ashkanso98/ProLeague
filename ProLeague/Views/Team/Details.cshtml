@model ProLeague.Domain.Entities.Team
@using ProLeague.Domain.Entities

@{
    ViewData["Title"] = $"پروفایل تیم: {Model.Name}";
    // Combine home and away matches, sort by date, and take the last 10
    var lastTenMatches = Model.HomeMatches.Concat(Model.AwayMatches)
                                          .OrderByDescending(m => m.MatchDate)
                                          .Take(10);
}

<style>
    .card-link {
        text-decoration: none;
        color: inherit;
    }

    .player-card {
        transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
    }

        .player-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>

<div class="card shadow-sm mb-4">
    <div class="card-body p-4">
        <div class="row align-items-center">
            <div class="col-md-2 text-center">
                <img src="@(Model.ImagePath ?? "/images/default-logo.png")" alt="@Model.Name" class="img-fluid" style="max-height: 120px;" />
            </div>
            <div class="col-md-10">
                <h1 class="display-5">@Model.Name</h1>
                <div class="mb-3">
                    @foreach (var entry in Model.LeagueEntries)
                    {
                        <span class="badge bg-primary fs-6 me-1">@entry.League.Name</span>
                    }
                </div>
                <p class="lead text-muted">ورزشگاه: @(Model.Stadium ?? "-")</p>
                <span class="badge bg-dark fs-6">
                    <i class="fas fa-heart me-1"></i> هواداران: @Model.FanCount
                </span>
            </div>
        </div>
    </div>
</div>

<h3 class="mb-3"> نتایج در لیگ </h3>
<div class="row">
    @foreach (var entry in Model.LeagueEntries)
    {
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0"> نتایج در  @entry.League.Name</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>امتیاز</th>
                                    <th>بازی</th>
                                    <th>برد</th>
                                    <th>مساوی</th>
                                    <th>باخت</th>
                                    <th>تفاضل</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="fs-5 fw-bold">@entry.Points</td>
                                    <td>@entry.Played</td>
                                    <td>@entry.Wins</td>
                                    <td>@entry.Draws</td>
                                    <td>@entry.Losses</td>
                                    <td class="fw-bold @(entry.GoalDifference >= 0 ? "text-success" : "text-danger")">@entry.GoalDifference</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<ul class="nav nav-tabs mt-4" id="teamTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="matches-tab" data-bs-toggle="tab" data-bs-target="#matches" type="button">مسابقات</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="players-tab" data-bs-toggle="tab" data-bs-target="#players" type="button">بازیکنان</button>
    </li>
</ul>
<div class="tab-content border border-top-0 p-3" id="teamTabContent">
    <div class="tab-pane fade show active" id="matches" role="tabpanel">
        <h4 class="mb-3">نتایج 10 مسابقه آخر </h4>
        @if (!lastTenMatches.Any())
        {
            <p class="text-muted">مسابقه ای برای این تیم ثبت نشده است</p>
        }
        else
        {
            <ul class="list-group list-group-flush">
                @foreach (var match in lastTenMatches)
                {
                    var opponent = match.HomeTeamId == Model.Id ? match.AwayTeam : match.HomeTeam;
                    var isHomeMatch = match.HomeTeamId == Model.Id;

                    <li class="list-group-item">
                        <div class="row align-items-center">
                            <div class="col-md-2 text-muted small">@match.MatchDate.ToString("yyyy/MM/dd")</div>
                            <div class="col-md-8 d-flex justify-content-center align-items-center text-center">
                                <span class="team-name col text-end fw-bold">@(isHomeMatch? Model.Name: opponent.Name)</span>
                                <img src="@(isHomeMatch? Model.ImagePath ?? "/images/default-logo.png" : opponent.ImagePath ?? "/images/default-logo.png")" class="mx-2" height="24px" />

                                @if (match.Status == MatchStatus.Finished)
                                {
                                    <span class="badge bg-dark fs-6 mx-3">@match.HomeTeamGoals - @match.AwayTeamGoals</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6 mx-3">vs</span>
                                }

                                <img src="@(isHomeMatch? opponent.ImagePath ?? "/images/default-logo.png" : Model.ImagePath ?? "/images/default-logo.png")" class="mx-2" height="24px" />
                                <span class="team-name col text-start fw-bold">@(isHomeMatch? opponent.Name: Model.Name)</span>
                            </div>
                            <div class="col-md-2 text-center">
                                <span class="badge @(isHomeMatch ? "bg-info" : "bg-light text-dark")">@(isHomeMatch ? "خانه" : "خارج از خانه")</span>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
    <div class="tab-pane fade" id="players" role="tabpanel">
        <h4 class="mb-3"> بازیکنان</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var player in Model.Players)
            {
                <div class="col">
                    <a asp-controller="Player" asp-action="Details" asp-route-id="@player.Id" class="card-link">
                        <div class="card text-center h-100 player-card">
                            <img src="@(player.ImagePath ?? "/images/default-player.png")" class="card-img-top rounded-circle p-3 mx-auto" style="width:120px; height:120px; object-fit:cover;" alt="@player.Name">
                            <div class="card-body">
                                <h5 class="card-title">@player.Name</h5>
                                <p class="card-text text-muted">@player.Position</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>