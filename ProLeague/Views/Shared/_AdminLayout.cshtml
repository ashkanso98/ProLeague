<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پنل مدیریت ProLeague</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-bg: #212529;
            --sidebar-link-color: #adb5bd;
            --sidebar-link-hover: #fff;
            --sidebar-active-bg: #495057;
        }

        body {
            font-family: 'Vazirmatn', sans-serif;
            background-color: #f8f9fa;
        }

        .wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* --- Sidebar Styles --- */
        .sidebar {
            width: var(--sidebar-width);
            min-height: 100vh;
            background: var(--sidebar-bg);
            color: white;
            transition: all 0.3s;
        }

        .sidebar-header {
            padding: 1.25rem;
            text-align: center;
            border-bottom: 1px solid #495057;
        }

            .sidebar-header h3 {
                color: #fff;
                margin-bottom: 0;
            }

        .sidebar .nav-link {
            padding: .8rem 1.25rem;
            color: var(--sidebar-link-color);
            display: flex;
            align-items: center;
            border-right: 3px solid transparent;
        }

            .sidebar .nav-link i {
                width: 20px;
                margin-left: 10px;
            }

            .sidebar .nav-link:hover {
                color: var(--sidebar-link-hover);
                background: var(--sidebar-active-bg);
            }

            .sidebar .nav-link.active {
                color: white;
                font-weight: 500;
                border-right-color: #0d6efd;
            }

        /* --- Main Content Styles --- */
        .main-content {
            flex-grow: 1;
            padding: 1.5rem;
            width: calc(100% - var(--sidebar-width));
        }

        .top-navbar {
            background: #fff;
            padding: .75rem 1.5rem;
            border-radius: .5rem;
            box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
        }

        .footer {
            background: #fff;
            padding: 1rem;
            margin-top: auto;
            border-radius: .5rem;
        }
    </style>
</head>

@functions {
        // متد کمکی برای تشخیص صفحه فعال در منو
        public string? IsActive(string controller)
        {
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                return (controller == currentController) ? "active" : null;
        }
}

<body>
    <div class="wrapper">
        <nav class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-shield-alt me-2"></i> ProLeague</h3>
            </div>

            <ul class="nav flex-column p-2">
                <li class="nav-item">
                    <a class="nav-link @IsActive("Home")" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> داشبورد
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("League")" asp-area="Admin" asp-controller="League" asp-action="Index">
                        <i class="fas fa-trophy"></i> مدیریت لیگ‌ها
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("Team")" asp-area="Admin" asp-controller="Team" asp-action="Index">
                        <i class="fas fa-users"></i> مدیریت تیم‌ها
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("Player")" asp-area="Admin" asp-controller="Player" asp-action="Index">
                        <i class="fas fa-user-friends"></i> مدیریت بازیکنان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("Match")" asp-area="Admin" asp-controller="Match" asp-action="Index">
                        <i class="fas fa-futbol"></i> مدیریت مسابقات
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("News")" asp-area="Admin" asp-controller="News" asp-action="Index">
                        <i class="far fa-newspaper"></i> مدیریت اخبار
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @IsActive("Comment")" asp-area="Admin" asp-controller="Comment" asp-action="Index">
                        <i class="far fa-comments"></i> مدیریت نظرات
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
                        <i class="fas fa-globe"></i> مشاهده سایت
                    </a>
                </li>
            </ul>
        </nav>

        <div class="main-content d-flex flex-column">
            <header class="top-navbar d-flex justify-content-end align-items-center mb-4">
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user me-2"></i> @User.Identity?.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#">پروفایل</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i> خروج
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </header>

            <main role="main" class="flex-grow-1">
                @RenderBody()
            </main>

            <footer class="footer text-muted mt-4">
                <div class="container-fluid text-center">
                    &copy; 2025 - ProLeague Admin Panel
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>