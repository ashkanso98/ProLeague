@model ProLeague.Domain.Entities.ApplicationUser
@{
    ViewData["Title"] = "پروفایل کاربری";
    // ساخت SelectList برای استفاده در فرم
    var teamsSelectList = new SelectList(ViewBag.Teams, "Id", "Name", Model.FavoriteTeamId);
}

<style>
    .profile-card {
        border: none;
        border-radius: 1rem;
    }

    .profile-header {
        background: linear-gradient(to right, #0052D4, #65C7F7, #9CECFB);
        color: white;
        padding: 2rem;
        border-radius: 1rem 1rem 0 0;
        text-align: center;
    }

    .profile-avatar {
        font-size: 80px;
        margin-bottom: 1rem;
    }

    .favorite-team-section {
        background-color: #f8f9fa;
        border-radius: .5rem;
    }

    .favorite-team-logo {
        max-width: 80px;
        max-height: 80px;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg profile-card">
                <div class="profile-header">
                    <i class="fas fa-user-circle profile-avatar"></i>
                    <h2 class="h3">خوش آمدید، @Model.UserName</h2>
                    <p class="mb-0">@Model.Email</p>
                </div>

                <div class="card-body p-4">
                    <h4 class="mb-3">تیم محبوب شما</h4>
                    @if (Model.FavoriteTeam != null)
                    {
                        <div class="d-flex align-items-center p-3 mb-4 favorite-team-section">
                            <img src="@(Model.FavoriteTeam.ImagePath ?? "/images/default-logo.png")" alt="@Model.FavoriteTeam.Name" class="favorite-team-logo me-3" />
                            <div>
                                <h5 class="mb-0">@Model.FavoriteTeam.Name</h5>
                                <a asp-controller="Team" asp-action="Details" asp-route-id="@Model.FavoriteTeamId" class="text-muted">مشاهده پروفایل تیم</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">شما هنوز تیم محبوبی انتخاب نکرده‌اید.</div>
                    }

                    <form asp-action="SetFavoriteTeam" method="post">
                        <div class="mb-3">
                            <label for="teamSelect" class="form-label fw-bold">تغییر یا انتخاب تیم محبوب:</label>
                            <select class="form-select" name="teamId" asp-items="teamsSelectList">
                                <option value="">-- بدون تیم --</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i> ذخیره تغییرات
                        </button>
                    </form>

                    <hr class="my-4">

                    <h4 class="mb-3">تنظیمات حساب</h4>
                    <div class="list-group">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            مدیریت اطلاعات حساب
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            تغییر رمز عبور
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Email" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            مدیریت ایمیل
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>