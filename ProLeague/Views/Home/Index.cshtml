@if (Model.PinnedLeague != null)
{
    <section class="pinned-league-section mb-5">
        <div class="d-flex align-items-center pb-2 border-bottom mb-3">
            <img src="@Model.PinnedLeague.ImagePath" style="height: 35px;" class="me-2" />
            <h2 class="mb-0 fs-5">@Model.PinnedLeague.Name</h2>
        </div>
        <div class="card shadow-sm">
            <div class="card-body league-table-wrapper">
                <partial name="_LeagueTablePartial" model="Model.PinnedLeague.TeamEntries" />
                <a asp-controller="League" asp-action="Details" asp-route-id="@Model.PinnedLeague.Id" class="btn btn-outline-primary btn-sm mt-3">جزئیات کامل لیگ</a>
            </div>
        </div>
    </section>
}

<section class="leagues-section">
    <h2 class="pb-2 border-bottom mb-3">سایر لیگ‌ها</h2>
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs" id="leagueTabs" role="tablist">
                @for (var i = 0; i < Model.TopLeagues.Count; i++)
                {
                    var league = Model.TopLeagues[i];
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(i == 0 ? "active" : "")" id="tab-@league.Id" data-bs-toggle="tab" data-bs-target="#content-@league.Id" type="button" role="tab">
                            <img src="@league.ImagePath" style="margin-right:5px;" height="20px" /> @league.Name
                        </button>
                    </li>
                }
            </ul>
            <div class="tab-content" id="leagueTabsContent">
                @for (var i = 0; i < Model.TopLeagues.Count; i++)
                {
                    var league = Model.TopLeagues[i];
                    <div class="tab-pane fade @(i == 0 ? "show active" : "")" id="content-@league.Id" role="tabpanel">
                        <div class="p-3 border border-top-0 league-table-wrapper">
                            <partial name="_LeagueTablePartial" model="league.TeamEntries" />
                            <a asp-controller="League" asp-action="Details" asp-route-id="@league.Id" class="btn btn-outline-primary btn-sm mt-3">جزئیات کامل لیگ</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>