@model ProLeague.Application.ViewModels.Home.HomeViewModel

@{
    ViewData["Title"] = "صفحه اصلی";
}

@functions {
    // متد کمکی برای خلاصه‌سازی متن
    public static string Truncate(string text, int length)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= length)
            return text;
        return text.Substring(0, length) + "...";
    }
}

<style>
    /* استایل‌های سفارشی برای زیباسازی - بهتر است این کدها به فایل site.css منتقل شوند */
    .hero-section {
        position: relative;
        height: 50vh;
        background-size: cover;
        background-position: center;
        border-radius: 0.5rem;
        color: white;
        display: flex;
        align-items: flex-end;
        padding: 2rem;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
            border-radius: 0.5rem;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .news-card {
        transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
    }

        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .league-table-logo {
        height: 45px;
        margin-right: 8px;
    }
</style>

@if (Model.FeaturedNews != null)
{
    <section class="hero-section mb-5 shadow" style="background-image: url('@(Model.FeaturedNews.MainImagePath ?? "/images/default-news.png")');">
        <div class="hero-content">
            <h1 class="display-4 fw-bold">@Model.FeaturedNews.Title</h1>
            <p class="lead">@Truncate(Model.FeaturedNews.Content, 150)</p>
            <a asp-controller="News" asp-action="Details" asp-route-id="@Model.FeaturedNews.Id" class="btn btn-primary btn-lg">ادامه مطلب &raquo;</a>
        </div>
    </section>
}


<section class="latest-news mb-5">
    <h2 class="pb-2 border-bottom mb-4">آخرین اخبار</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var news in Model.LatestNews)
        {
            <div class="col">
                <div class="card h-100 shadow-sm news-card">
                    <img src="@(news.MainImagePath ?? "/images/default-news.png")" class="card-img-top" alt="@news.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text text-muted">@Truncate(news.Content, 80)</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="stretched-link">بیشتر بخوانید</a>
                        <small class="text-muted float-end">@news.PublishedDate.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        }
    </div>
</section>







@if (Model.PinnedLeague != null)
{
    <section class="pinned-league-section mb-5">
        <div class="d-flex align-items-center pb-2 border-bottom mb-3">
            <img src="@Model.PinnedLeague.ImagePath" style="height: 40px;" class="me-3" />
            <h2 class="mb-0"> @Model.PinnedLeague.Name</h2>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <partial name="_LeagueTablePartial" model="Model.PinnedLeague.Teams" />
                <a asp-controller="League" asp-action="Details" asp-route-id="@Model.PinnedLeague.Id" class="btn btn-outline-primary mt-3">مشاهده جزئیات کامل لیگ</a>
            </div>
        </div>
    </section>
}


<section class="leagues-section">
    <h2 class="pb-2 border-bottom mb-4">سایر لیگ‌ها</h2>
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs" id="leagueTabs" role="tablist">
                @for (var i = 0; i < Model.TopLeagues.Count; i++)
                {
                    var league = Model.TopLeagues[i];
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(i == 0 ? "active" : "")" id="tab-@league.Id" data-bs-toggle="tab" data-bs-target="#content-@league.Id" type="button" role="tab">
                            <img src="@league.ImagePath" style="margin-right:5px;" height="20px" /> @league.Name
                        </button>
                    </li>
                }
            </ul>
            <div class="tab-content" id="leagueTabsContent">
                @for (var i = 0; i < Model.TopLeagues.Count; i++)
                {
                    var league = Model.TopLeagues[i];
                    <div class="tab-pane fade @(i == 0 ? "show active" : "")" id="content-@league.Id" role="tabpanel">
                        <div class="p-3 border border-top-0">
                            <partial name="_LeagueTablePartial" model="league.Teams" />
                            <a asp-controller="League" asp-action="Details" asp-route-id="@league.Id" class="btn btn-outline-primary mt-3">مشاهده جزئیات کامل لیگ</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>





