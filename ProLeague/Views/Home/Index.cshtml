    }
</style>

@if (Model.FeaturedNews != null)
{
    <section class="hero-section mb-4 shadow" style="background-image: url('@(Model.FeaturedNews.MainImagePath ?? "/images/default-news.png")');">
        <div class="hero-content">
            <h1 class="fw-bold">@Model.FeaturedNews.Title</h1>
            <p>@Truncate(Model.FeaturedNews.Content, 120)</p>
            <a asp-controller="News" asp-action="Details" asp-route-id="@Model.FeaturedNews.Id" class="btn btn-primary btn-sm">ادامه مطلب &raquo;</a>
        </div>
    </section>
}

