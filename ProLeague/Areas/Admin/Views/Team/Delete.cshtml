@model ProLeague.Domain.Entities.Team

@{
    ViewData["Title"] = "حذف تیم";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3">@ViewData["Title"]</h1>

<div class="alert alert-danger mt-3">
    <h4>آیا از حذف تیم "@Model.Name" اطمینان دارید؟</h4>
    <p>This operation is irreversible.</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row align-items-center">
            <dt class="col-sm-3">Logo</dt>
            <dd class="col-sm-9"><img src="@(Model.ImagePath ?? "/images/default-logo.png")" alt="Logo" style="width: 75px;"></dd>
            <dt class="col-sm-3">Team Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Leagues</dt>
            <dd class="col-sm-9">
                @foreach (var entry in Model.LeagueEntries)
                {
                    <span class="badge bg-primary me-1">@entry.League.Name</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> Cancel</a>
        </form>
    </div>
</div>