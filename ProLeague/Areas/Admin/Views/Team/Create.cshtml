@model ProLeague.Application.ViewModels.Team.CreateTeamViewModel

@{
    ViewData["Title"] = "ایجاد تیم جدید";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header"><h5 class="mb-0">اطلاعات تیم</h5></div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Stadium" class="form-label"></label>
                    <input asp-for="Stadium" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="LeagueIds" class="form-label"></label>
                    <select asp-for="LeagueIds" class="form-select select2" asp-items="ViewBag.Leagues" multiple></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LogoFile" class="form-label"></label>
                    <input asp-for="LogoFile" type="file" class="form-control" accept="image/*" />
                </div>
            </div>
            <hr />
            <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i> ایجاد</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> انصراف</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                 placeholder: "یک یا چند لیگ را انتخاب کنید",
                 dir: "rtl"
            });
        });
    </script>
}