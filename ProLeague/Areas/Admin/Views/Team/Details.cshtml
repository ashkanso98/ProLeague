@model ProLeague.Domain.Entities.Team

@{
    ViewData["Title"] = "جزئیات تیم: " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">ویرایش</a>
        <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    </div>
</div>


<div class="row">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body text-center">
                <img src="@(Model.ImagePath ?? "/images/default-logo.png")" class="img-fluid rounded-circle mb-3"
                     alt="لوگوی @Model.Name" style="width: 150px; height: 150px; object-fit: contain; border: 3px solid #eee;">
                <h4 class="card-title">@Model.Name</h4>
                <p class="text-muted">@Model.League.Name</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <strong>ورزشگاه</strong>
                    <span>@(Model.Stadium ?? "-")</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card shadow-sm mb-3">
            <div class="card-header">
                <h5 class="card-title mb-0">آمار و عملکرد در لیگ</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered text-center">
                        <thead class="table-light">
                            <tr>
                                <th>امتیاز</th>
                                <th>بازی</th>
                                <th>برد</th>
                                <th>مساوی</th>
                                <th>باخت</th>
                                <th>گل زده</th>
                                <th>گل خورده</th>
                                <th>تفاضل</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="fs-5 fw-bold">@Model.Points</td>
                                <td>@Model.Played</td>
                                <td>@Model.Wins</td>
                                <td>@Model.Draws</td>
                                <td>@Model.Losses</td>
                                <td>@Model.GoalsFor</td>
                                <td>@Model.GoalsAgainst</td>
                                <td class="fw-bold @(Model.GoalDifference >= 0 ? "text-success" : "text-danger")">@Model.GoalDifference</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="card-title mb-0">بازیکنان</h5>
            </div>
            <div class="card-body">
                <p class="text-muted text-center">لیست بازیکنان در این بخش نمایش داده خواهد شد.</p>
            </div>
        </div>

    </div>
</div>