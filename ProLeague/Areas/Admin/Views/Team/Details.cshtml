@model ProLeague.Domain.Entities.Team

@{
    ViewData["Title"] = "جزئیات تیم: " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-right me-2"></i> Back to List</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body text-center">
                <img src="@(Model.ImagePath ?? "/images/default-logo.png")" class="img-fluid rounded-circle mb-3" 
                     alt="@Model.Name" style="width: 150px; height: 150px; object-fit: contain; border: 3px solid #eee;">
                <h4 class="card-title">@Model.Name</h4>
                <div class="my-3">
                    @foreach(var entry in Model.LeagueEntries)
                    {
                        <span class="badge bg-primary">@entry.League.Name</span>
                    }
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between"><strong>Stadium</strong><span>@(Model.Stadium ?? "-")</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-8">
    </div>
</div>