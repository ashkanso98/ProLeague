@model ProLeague.Areas.Admin.Models.EditTeamViewModel

@{
    ViewData["Title"] = "ویرایش تیم: " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingLogoPath" />

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-3">
                        <div class="card-header">اطلاعات اصلی و لوگو</div>
                        <div class="card-body text-center">
                            <img src="@(Model.ExistingLogoPath ?? "/images/default-logo.png")" class="img-thumbnail mb-3"
                                 alt="لوگوی فعلی" style="width: 150px; height: 150px; object-fit: contain;">
                            <div class="mb-3">
                                <label asp-for="NewLogoFile" class="form-label"></label>
                                <input asp-for="NewLogoFile" type="file" class="form-control" accept="image/*">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card mb-3">
                        <div class="card-header">مشخصات و آمار</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Stadium" class="form-label"></label>
                                    <input asp-for="Stadium" class="form-control" />
                                    <span asp-validation-for="Stadium" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label asp-for="LeagueId" class="form-label"></label>
                                    <select asp-for="LeagueId" class="form-select" asp-items="ViewBag.LeagueId"></select>
                                    <span asp-validation-for="LeagueId" class="text-danger"></span>
                                </div>
                            </div>
                            <hr>
                            <h5 class="card-title">آمار فصل</h5>
                            <div class="row">
                                <div class="col-md-4 mb-3"><label asp-for="Played" class="form-label"></label><input asp-for="Played" class="form-control" /></div>
                                <div class="col-md-4 mb-3"><label asp-for="Wins" class="form-label"></label><input asp-for="Wins" class="form-control" /></div>
                                <div class="col-md-4 mb-3"><label asp-for="Draws" class="form-label"></label><input asp-for="Draws" class="form-control" /></div>
                                <div class="col-md-4 mb-3"><label asp-for="Losses" class="form-label"></label><input asp-for="Losses" class="form-control" /></div>
                                <div class="col-md-4 mb-3"><label asp-for="GoalsFor" class="form-label"></label><input asp-for="GoalsFor" class="form-control" /></div>
                                <div class="col-md-4 mb-3"><label asp-for="GoalsAgainst" class="form-label"></label><input asp-for="GoalsAgainst" class="form-control" /></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">انصراف</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}