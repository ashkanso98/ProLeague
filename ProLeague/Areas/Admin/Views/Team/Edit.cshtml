@model ProLeague.Application.ViewModels.Team.EditTeamViewModel

@{
    ViewData["Title"] = "ویرایش تیم: " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-7">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Stadium" class="form-label"></label>
                        <input asp-for="Stadium" class="form-control" />
                    </div>
                    <div class="form-check form-switch mt-3">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="IsImportant">
                        <label class="form-check-label" asp-for="IsImportant"></label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LeagueIds" class="form-label"></label>
                        <select asp-for="LeagueIds" class="form-select select2" asp-items="ViewBag.Leagues" multiple></select>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="text-center border p-3 rounded bg-light">
                        <label class="form-label d-block">لوگو</label>
                        <img id="logoPreview" src="@(Model.ExistingLogoPath ?? "/images/default-logo.png")" alt="Preview"
                             class="img-thumbnail mb-3" style="width: 150px; height: 150px; object-fit: contain;">
                        <div class="mb-3">
                            <label asp-for="NewLogoFile" class="form-label"></label>
                            <input asp-for="NewLogoFile" type="file" class="form-control" accept="image/*"
                                   onchange="document.getElementById('logoPreview').src = window.URL.createObjectURL(this.files[0])">
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4" />
            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i> ذخیره تغییرات</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> انصراف</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                 placeholder: "یک یا چند لیگ را انتخاب کنید",
                 dir: "rtl"
            });
        });
    </script>
}