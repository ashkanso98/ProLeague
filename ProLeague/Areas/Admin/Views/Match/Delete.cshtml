@model ProLeague.Domain.Entities.Match

@{
    ViewData["Title"] = "حذف مسابقه";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3">@ViewData["Title"]</h1>

<div class="alert alert-danger mt-3">
    <h4>آیا از حذف این مسابقه اطمینان دارید؟</h4>
    <p>این عملیات قابل بازگشت نیست.</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">مسابقه</dt>
            <dd class="col-sm-9">@Model.HomeTeam.Name vs @Model.AwayTeam.Name</dd>
            <dt class="col-sm-3">تاریخ</dt>
            <dd class="col-sm-9">@Model.MatchDate.ToString("f")</dd>
        </dl>
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> بله، حذف کن</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> انصراف</a>
        </form>
    </div>
</div>