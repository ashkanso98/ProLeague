@model ProLeague.Application.ViewModels.Admin.MatchIndexViewModel
@using ProLeague.Domain.Entities

@{
    ViewData["Title"] = "مدیریت مسابقات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i> ایجاد مسابقه جدید</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["SuccessMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="card shadow-sm">
    <div class="card-header">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="leagueId" class="form-label">فیلتر بر اساس لیگ</label>
                    <select name="leagueId" asp-items="Model.Leagues" class="form-select" onchange="this.form.submit()">
                        <option value="">همه لیگ‌ها</option>
                    </select>
                </div>
                @if (Model.SelectedLeagueId.HasValue)
                {
                    <div class="col-md-5">
                        <label for="week" class="form-label">فیلتر بر اساس هفته</label>
                        <select name="week" asp-items="Model.Weeks" class="form-select" onchange="this.form.submit()">
                            <option value="">همه هفته‌ها</option>
                        </select>
                    </div>
                }
            </div>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>League</th>
                        <th>Week</th>
                        <th class="text-center">Match</th>
                        <th class="text-center">Result</th>
                        <th>Date</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Matches.OrderByDescending(m => m.MatchDate))
                    {
                        <tr>
                            <td>
                                <img src="@(item.League.ImagePath ?? "/images/default-logo.png")" style="height:24px;" class="me-2" title="@item.League.Name" />
                            </td>
                            <td>@item.MatchWeek</td>
                            <td class="text-center">
                                <span class="fw-bold">@item.HomeTeam.Name</span>
                                <img src="@(item.HomeTeam.ImagePath ?? "/images/default-logo.png")" style="width:24px;" class="mx-2" />
                                vs
                                <img src="@(item.AwayTeam.ImagePath ?? "/images/default-logo.png")" style="width:24px;" class="mx-2" />
                                <span class="fw-bold">@item.AwayTeam.Name</span>
                            </td>
                            <td class="text-center fw-bold">
                                @(item.IsFinished ? $"{item.HomeTeamGoals} - {item.AwayTeamGoals}" : "-")
                            </td>
                            <td>@item.MatchDate.ToString("yyyy/MM/dd HH:mm")</td>
                            <td class="text-center">
                                @{
                                    var statusBadge = item.Status switch
                                    {
                                        MatchStatus.Scheduled => "bg-info",
                                        MatchStatus.Finished => "bg-success",
                                        MatchStatus.Canceled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusBadge">@item.Status</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="UpdateResult" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Update Result"><i class="fas fa-poll"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>