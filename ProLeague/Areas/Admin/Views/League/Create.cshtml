@model ProLeague.Areas.Admin.Models.CreateLeagueViewModel

@{
    ViewData["Title"] = "ایجاد لیگ جدید";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" enctype="multipart/form-data">
        <!-- این خط بسیار مهم است -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="LogoFile" class="form-label"></label>
            <input asp-for="LogoFile" class="form-control" type="file" accept="image/*" />
            <span asp-validation-for="LogoFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="ایجاد" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">لغو</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}