@model ProLeague.Domain.Entities.League

@{
    ViewData["Title"] = "حذف لیگ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3">@ViewData["Title"]</h1>

<div class="alert alert-danger mt-3">
    <h4>آیا از حذف لیگ "@Model.Name" اطمینان دارید؟</h4>
    <p>این عملیات قابل بازگشت نیست و تمام تیم‌های مرتبط با این لیگ نیز حذف خواهند شد.</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row align-items-center">
            <dt class="col-sm-3">لوگو</dt>
            <dd class="col-sm-9">
                <img src="@(Model.ImagePath ?? "/images/default-logo.png")" alt="لوگو" style="width: 75px;">
            </dd>
            <dt class="col-sm-3">نام لیگ</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">کشور</dt>
            <dd class="col-sm-9">@Model.Country</dd>
        </dl>
        
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-2"></i> بله، حذف کن
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i> انصراف
            </a>
        </form>
    </div>
</div>