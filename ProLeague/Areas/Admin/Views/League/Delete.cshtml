@model ProLeague.Domain.Entities.League

@{
    ViewData["Title"] = "حذف لیگ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h3>آیا از حذف این لیگ اطمینان دارید؟</h3>
    <p>با حذف این لیگ، تمام اطلاعات مربوط به آن برای همیشه از دست خواهد رفت.</p>
</div>

<div>
    <h4>اطلاعات لیگ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            کشور
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            لوگو
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="لوگوی @Model.Name" style="max-width: 150px;" class="img-thumbnail" />
            }
            else
            {
                <span class="text-muted">بدون لوگو</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="بله، حذف کن" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">انصراف</a>
    </form>
</div>