@model ProLeague.Domain.Entities.League

@{
    ViewData["Title"] = "جزئیات لیگ: " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
    <div>
        <!-- این دکمه را اضافه کنید -->
        <a asp-area="Admin" asp-controller="PointDeduction" asp-action="Index" asp-route-leagueId="@Model.Id" class="btn btn-warning">
            <i class="fas fa-minus-circle me-2"></i> مدیریت کسر امتیاز
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i> ویرایش</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-right me-2"></i> بازگشت</a>
    </div>
</div>
