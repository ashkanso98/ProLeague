@model ProLeague.Application.ViewModels.Admin.AdminDashboardViewModel
@using ProLeague.Domain.Entities

@{
    ViewData["Title"] = "داشبورد";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@functions {
    // متد کمکی برای خلاصه‌سازی متن
    public static string Truncate(string text, int length)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= length)
            return text;
        return text.Substring(0, length) + "...";
    }
}

<style>
    /* استایل‌های سفارشی برای کارت‌های داشبورد */
    .stat-card {
        border-right: 4px solid var(--bs-border-color);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .border-right-primary {
        border-right-color: #4e73df !important;
    }

    .border-right-success {
        border-right-color: #1cc88a !important;
    }

    .border-right-info {
        border-right-color: #36b9cc !important;
    }

    .border-right-warning {
        border-right-color: #f6c23e !important;
    }

    .text-xs {
        font-size: .8rem;
    }
</style>

<!-- هدر صفحه -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-dark">داشبورد مدیریتی</h1>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}


<!-- ردیف کارت‌های آمار -->
<div class="row">

    <!-- کارت لیگ‌ها -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow-sm h-100 stat-card border-right-primary">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">تعداد لیگ‌ها</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalLeagues</div>
                    </div>
                    <div class="col-auto fs-2 text-gray-300">🏆</div>
                </div>
                <a asp-area="Admin" asp-controller="League" asp-action="Index" class="stretched-link" title="مدیریت لیگ‌ها"></a>
            </div>
        </div>
    </div>

    <!-- کارت تیم‌ها -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow-sm h-100 stat-card border-right-success">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">تعداد تیم‌ها</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalTeams</div>
                    </div>
                    <div class="col-auto fs-2 text-gray-300">👥</div>
                </div>
                <a asp-area="Admin" asp-controller="Team" asp-action="Index" class="stretched-link" title="مدیریت تیم‌ها"></a>
            </div>
        </div>
    </div>

    <!-- کارت بازیکنان -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow-sm h-100 stat-card border-right-info">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">تعداد بازیکنان</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalPlayers</div>
                    </div>
                    <div class="col-auto fs-2 text-gray-300">👤</div>
                </div>
                <a asp-area="Admin" asp-controller="Player" asp-action="Index" class="stretched-link" title="مدیریت بازیکنان"></a>
            </div>
        </div>
    </div>

    <!-- کارت نظرات در انتظار -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow-sm h-100 stat-card border-right-warning">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">نظرات در انتظار</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.RecentComments.Count(c => c.Status == CommentStatus.Pending)</div>
                    </div>
                    <div class="col-auto fs-2 text-gray-300">📬</div>
                </div>
                <a asp-area="Admin" asp-controller="Comment" asp-action="Index" class="stretched-link" title="مدیریت نظرات"></a>
            </div>
        </div>
    </div>

</div>

<!-- ردیف محتوای اخیر -->
<div class="row">

    <!-- بخش آخرین اخبار -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 fw-bold text-primary"><i class="far fa-newspaper me-2"></i>آخرین اخبار منتشر شده</h6>
                <a asp-area="Admin" asp-controller="News" asp-action="Index">مشاهده همه</a>
            </div>
            <div class="card-body">
                @if (Model.RecentNews != null && Model.RecentNews.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var news in Model.RecentNews)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-area="Admin" asp-controller="News" asp-action="Details" asp-route-id="@news.Id">@Truncate(news.Title, 50)</a>
                                <span class="badge bg-light text-dark rounded-pill">@news.PublishedDate.ToShortDateString()</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center text-muted m-3">هیچ خبری اخیراً منتشر نشده است.</p>
                }
            </div>
        </div>
    </div>

    <!-- بخش آخرین نظرات (با قابلیت مدیریت) -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 fw-bold text-success"><i class="far fa-comments me-2"></i>آخرین نظرات ثبت شده</h6>
                <a asp-area="Admin" asp-controller="Comment" asp-action="Index">مشاهده همه</a>
            </div>
            <div class="card-body">
                @if (Model.RecentComments != null && Model.RecentComments.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var comment in Model.RecentComments)
                        {
                            <li class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@(comment.User?.UserName ?? "کاربر مهمان")</h6>
                                    @{
                                        var statusBadge = comment.Status switch
                                        {
                                            CommentStatus.Pending => "bg-warning text-dark",
                                            CommentStatus.Approved => "bg-success",
                                            CommentStatus.Rejected => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusBadge">@comment.Status</span>
                                </div>
                                <p class="mb-2 fst-italic">"@Truncate(comment.Content, 80)"</p>
                                @if (comment.Status == CommentStatus.Pending)
                                {
                                    <div class="mt-2">
                                        <form asp-area="Admin" asp-controller="Comment" asp-action="Approve" asp-route-id="@comment.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-success">تأیید</button>
                                        </form>
                                        <form asp-area="Admin" asp-controller="Comment" asp-action="Reject" asp-route-id="@comment.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-warning">رد کردن</button>
                                        </form>
                                        <a asp-area="Admin" asp-controller="Comment" asp-action="Details" asp-route-id="@comment.Id" class="btn btn-sm btn-outline-secondary">جزئیات</a>
                                    </div>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center text-muted m-3">هیچ نظر جدیدی ثبت نشده است.</p>
                }
            </div>
        </div>
    </div>
</div>