@model ProLeague.Application.ViewModels.Player.CreatePlayerViewModel

@{
    ViewData["Title"] = "ثبت بازیکن جدید";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">اطلاعات بازیکن</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PhotoFile" class="form-label"></label>
                    <input asp-for="PhotoFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="PhotoFile" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TeamId" class="form-label"></label>
                    <select asp-for="TeamId" class="form-select" asp-items="ViewBag.TeamId">
                        <option value="">یک تیم انتخاب کنید...</option>
                    </select>
                    <span asp-validation-for="TeamId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Position" class="form-label"></label>
                    <select asp-for="Position" class="form-select" asp-items="Html.GetEnumSelectList<ProLeague.Domain.Entities.Position>()">
                        <option value="">یک پست انتخاب کنید...</option>
                    </select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i> ثبت بازیکن
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i> انصراف
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}