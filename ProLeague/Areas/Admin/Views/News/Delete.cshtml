@model ProLeague.Domain.Entities.News

@{
    ViewData["Title"] = "حذف خبر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3">@ViewData["Title"]</h1>

<div class="alert alert-danger mt-3">
    <h4>آیا از حذف خبر "@Model.Title" اطمینان دارید؟</h4>
    <p>این عملیات قابل بازگشت نیست و تمام تصاویر و اطلاعات مرتبط با این خبر برای همیشه حذف خواهند شد.</p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row align-items-center">
            <dt class="col-sm-3">تصویر اصلی</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.MainImagePath))
                {
                    <img src="@Model.MainImagePath" alt="تصویر اصلی" style="width: 150px;" class="img-thumbnail">
                }
                else
                {
                    <span class="text-muted">بدون تصویر</span>
                }
            </dd>

            <dt class="col-sm-3">عنوان خبر</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">تاریخ انتشار</dt>
            <dd class="col-sm-9">@Model.PublishedDate.ToString("yyyy/MM/dd")</dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> بله، حذف کن</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i> انصراف</a>
        </form>
    </div>
</div>