@model IEnumerable<ProLeague.Domain.Entities.PointDeduction>

@{
    var league = ViewBag.League as ProLeague.Domain.Entities.League;
    ViewData["Title"] = $"مدیریت کسر امتیاز: {league.Name}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
    <a asp-action="Create" asp-route-leagueId="@league.Id" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> ثبت کسر امتیاز جدید
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["SuccessMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>تیم</th>
                        <th class="text-center">امتیاز کسر شده</th>
                        <th>دلیل</th>
                        <th>تاریخ ثبت</th>
                        <th class="text-center">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(item.LeagueEntry.Team.ImagePath ?? "/images/default-logo.png")" style="height:24px;" class="me-2" />
                                @item.LeagueEntry.Team.Name
                            </td>
                            <td class="text-center fw-bold">@item.Points</td>
                            <td>@item.Reason</td>
                            <td>@item.DateApplied.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>