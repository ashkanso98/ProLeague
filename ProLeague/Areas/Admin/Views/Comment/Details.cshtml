@model ProLeague.Domain.Entities.NewsComment

@{
    ViewData["Title"] = "جزئیات نظر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">@ViewData["Title"]</h1>
    <div>
        <a asp-action="Index" asp-route-status="@Model.Status" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-2"></i> بازگشت به لیست
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <span>ارسال شده توسط: <strong>@Model.User.UserName</strong></span>
            @{
                var statusBadge = Model.Status switch
                {
                    ProLeague.Domain.Entities.CommentStatus.Pending => "bg-warning text-dark",
                    ProLeague.Domain.Entities.CommentStatus.Approved => "bg-success",
                    ProLeague.Domain.Entities.CommentStatus.Rejected => "bg-danger",
                    _ => "bg-secondary"
                };
            }
            <span class="badge @statusBadge">@Model.Status</span>
        </div>
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>@Model.Content</p>
            <footer class="blockquote-footer mt-2">
                ثبت شده در <cite title="Source Title">@Model.CreatedDate.ToString("f")</cite>
            </footer>
        </blockquote>
    </div>
    <div class="card-footer">
        <small class="text-muted">
            مربوط به خبر:
            <a asp-area="Admin" asp-controller="News" asp-action="Details" asp-route-id="@Model.NewsId" target="_blank">@Model.News.Title</a>
        </small>
    </div>
</div>