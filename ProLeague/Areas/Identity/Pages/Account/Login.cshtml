@page
@model LoginModel

@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

<style>
    /* These styles are identical to the Register page for consistency */
    .auth-card {
        border: none;
        border-radius: 1rem;
        transition: all .3s;
    }

    .auth-card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .auth-card-body {
        padding: 2rem 2.5rem;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
    }

    .form-floating > .form-control:focus ~ label {
        opacity: .65;
        transform: scale(.85) translateY(-.5rem) translateX(.15rem);
    }

    .hr-text {
        line-height: 1em;
        position: relative;
        outline: 0;
        border: 0;
        color: black;
        text-align: center;
        height: 1.5em;
        opacity: .5;
    }

        .hr-text:before {
            content: '';
            background: linear-gradient(to right, transparent, #818078, transparent);
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
        }

        .hr-text:after {
            content: attr(data-content);
            position: relative;
            display: inline-block;
            color: black;
            padding: 0 .5em;
            line-height: 1.5em;
            background-color: #f4f7f6;
        }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg auth-card">
                <div class="card-header text-center p-4 auth-card-header">
                    <h2 class="h3 fw-bold mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body auth-card-body">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <div class="form-floating flex-grow-1">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ایمیل" />
                                    <label asp-for="Input.Email" class="form-label">ایمیل</label>
                                </div>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>

                            <div class="input-group mb-3 mt-3">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <div class="form-floating flex-grow-1">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="رمز عبور" />
                                    <label asp-for="Input.Password" class="form-label">رمز عبور</label>
                                </div>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>

                            @* <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        مرا به خاطر بسپار
                                    </label>
                                </div>
                                <div>
                                    <a id="forgot-password" asp-page="./ForgotPassword">فراموشی رمز عبور</a>
                                </div>
                            </div>

                            <div class="d-grid mt-4">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">ورود</button>
                            </div>

                            <div class="text-center mt-4">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">حساب کاربری ندارید؟ ثبت‌نام کنید</a>
                            </div> *@
                            <div class="d-grid mt-4">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">ورود</button>
                            </div>

                            <div class="text-center mt-4">
                                <p class="mb-1">
                                    <a id="forgot-password" asp-page="./ForgotPassword">فراموشی رمز عبور</a>
                                </p>
                                <p class="mb-1">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">حساب کاربری ندارید؟ ثبت‌نام کنید</a>
                                </p>
                                <p class="mb-0">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">ارسال مجدد ایمیل تایید</a>
                                </p>
                            </div>
                        </form>
                    </section>

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) > 0)
                        {
                            <hr class="hr-text" data-content="یا">
                            <section>
                                <h5 class="text-center">ورود با سرویس‌های دیگر</h5>
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2 mt-3">
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <i class="fab fa-@provider.Name.ToLower() me-2"></i> ورود با @provider.DisplayName
                                        </button>
                                    }
                                </form>
                            </section>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}