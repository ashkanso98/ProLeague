@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="mb-3">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-key fa-fw"></i></span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="رمز عبور فعلی" />
                            <label asp-for="Input.OldPassword" class="form-label"></label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>

                    <div class="input-group mb-3 mt-3">
                        <span class="input-group-text"><i class="fas fa-lock fa-fw"></i></span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور جدید" />
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>

                    <div class="input-group mb-3 mt-3">
                        <span class="input-group-text"><i class="fas fa-lock fa-fw"></i></span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="تکرار رمز عبور جدید" />
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>

                    <button type="submit" class="btn btn-primary mt-3">
                        <i class="fas fa-save me-2"></i> به‌روزرسانی رمز عبور
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}