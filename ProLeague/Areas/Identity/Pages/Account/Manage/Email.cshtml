@page
@model EmailModel
@{
    ViewData["Title"] = "مدیریت ایمیل";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="mb-3">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger small" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" placeholder="ایمیل شما" disabled />
                            @if (Model.IsEmailConfirmed)
                            {
                                <span class="input-group-text bg-success text-white" title="تایید شده"><i class="fas fa-check-circle"></i></span>
                            }
                            else
                            {
                                <span class="input-group-text bg-warning text-dark" title="تایید نشده"><i class="fas fa-exclamation-circle"></i></span>
                            }
                        </div>
                    </div>

                    @if (!Model.IsEmailConfirmed)
                    {
                        <div class="mb-4">
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-sm btn-outline-secondary">
                                ارسال مجدد ایمیل تایید
                            </button>
                        </div>
                    }

                    <hr />
                    <h5 class="mt-4 mb-3">تغییر آدرس ایمیل</h5>

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="ایمیل جدید" />
                            <label asp-for="Input.NewEmail" class="form-label"></label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>

                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary mt-3">
                        <i class="fas fa-save me-2"></i> تغییر ایمیل
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}