@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت‌نام";
}

<style>
    /* These styles are identical to the Login page for consistency */
    .auth-card {
        border: none;
        border-radius: 1rem;
    }

    .auth-card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .auth-card-body {
        padding: 2rem 2.5rem;
    }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg auth-card">
                <div class="card-header text-center p-4 auth-card-header">
                    <h2 class="h3 fw-bold mb-0">ایجاد حساب کاربری جدید</h2>
                </div>
                <div class="card-body auth-card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

                        <!-- New DisplayName Input -->
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.DisplayName" class="form-control" autocomplete="name" aria-required="true" placeholder="نام نمایشی" />
                                <label asp-for="Input.DisplayName">نام نمایشی</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.DisplayName" class="text-danger small"></span>

                        <!-- Email Input -->
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ایمیل" />
                                <label asp-for="Input.Email">ایمیل</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>

                        <!-- Password Input -->
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور" />
                                <label asp-for="Input.Password">رمز عبور</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>

                        <!-- Confirm Password Input -->
                        <div class="input-group mb-3 mt-3">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="تکرار رمز عبور" />
                                <label asp-for="Input.ConfirmPassword">تکرار رمز عبور</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>

                        <div class="d-grid mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">ثبت‌نام</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">حساب کاربری دارید؟ وارد شوید</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}