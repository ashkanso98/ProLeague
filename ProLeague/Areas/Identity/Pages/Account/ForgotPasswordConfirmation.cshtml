@page
@model ProLeague.Areas.Identity.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "تایید ارسال ایمیل بازیابی";
}

<style>
    /* These styles are identical to the Login/Register pages for consistency */
    .auth-card {
        border: none;
        border-radius: 1rem;
    }

    .auth-card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .auth-card-body {
        padding: 2rem 2.5rem;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg auth-card">
                <div class="card-header text-center p-4 auth-card-header">
                    <h2 class="h3 fw-bold mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body auth-card-body text-center">

                    <i class="far fa-paper-plane display-1 text-success mb-4"></i>

                    <p class="lead">
                        لینک بازیابی رمز عبور با موفقیت به ایمیل شما ارسال شد.
                    </p>
                    <p class="text-muted">
                        لطفاً صندوق ورودی (و پوشه اسپم) خود را بررسی کنید.
                    </p>

                    <div class="d-grid mt-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">بازگشت به صفحه اصلی</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>